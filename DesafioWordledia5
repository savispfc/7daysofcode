<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seu Jogo - Wordle</title>
    <!-- Link para o arquivo de estilos do Toastify -->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <style>
    </style>
</head>
<body>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script>
        function showAlert(message) {
            Toastify({
                text: message,
                duration: 3000, // Tempo em milissegundos que a mensagem será exibida
                gravity: "top", // Posição onde a mensagem será exibida
                close: true // Mostrar botão de fechar a mensagem
            }).showToast();
        }

        showAlert("Olá! Bem-vindo ao jogo!");
    </script>
</body>
